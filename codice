function elabora(){
  numbers=[12,145,200];
  console.log(numbers);
  let testo = document.getElementById("inNumber").value;
  alert(testo);
  //validazione
  if (testo == ""){
    alert("inserisci un numero tra 1 e 100");
  }
  else if (testo>1 && testo<100) { 
    console.log("numero; " + testo);
    alert("ok broski");
  }
  else {
    alert("cambia numero");
  }
}
function annulla(){
  document.getElementById("inNumber").value = "";
}
